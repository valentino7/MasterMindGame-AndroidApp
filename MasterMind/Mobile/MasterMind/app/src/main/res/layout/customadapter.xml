<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_marginTop="@dimen/marginTop10"
    android:layout_height="@dimen/linear_height"
    android:orientation="vertical">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="@dimen/linear_height"
        tools:ignore="InefficientWeight"
        android:layout_marginTop="@dimen/marginTop10"
        android:layout_marginBottom="@dimen/marginTop10"
        android:elevation="1dp"
        app:cardBackgroundColor="@color/cardColor">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_weight="1"
            android:layout_height="@dimen/height"
            android:layout_marginTop="@dimen/padding5">

            <com.example.antho.mastermind.CircleView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:id="@+id/circle1" />

            <com.example.antho.mastermind.CircleView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:id="@+id/circle2" />


            <com.example.antho.mastermind.CircleView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:id="@+id/circle3" />

            <com.example.antho.mastermind.CircleView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:id="@+id/circle4" />

            <com.example.antho.mastermind.CircleView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:id="@+id/circle5" />


            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1">

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/marginTop10">

                    <com.example.antho.mastermind.CircleView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:id="@+id/test1" />

                    <com.example.antho.mastermind.CircleView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:id="@+id/test2" />

                    <com.example.antho.mastermind.CircleView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:id="@+id/test5" />
                </LinearLayout>

                <Space
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    tools:ignore="NestedWeights" />

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/marginTop10"
                    android:weightSum="1">
                    <com.example.antho.mastermind.CircleView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/test3"
                        android:layout_weight="1" />

                    <com.example.antho.mastermind.CircleView
                        android:layout_height="wrap_content"
                        android:id="@+id/test4"
                        android:layout_width="@dimen/circle28" />
                </LinearLayout>
            </LinearLayout>

        </LinearLayout>
    </android.support.v7.widget.CardView>

</LinearLayout>